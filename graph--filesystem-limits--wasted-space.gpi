set xlabel "Directory Depth"
set xrange [-.5:6.5]
set xtics 1

set ylabel "Wasted disk space"
set format y "%1.0f%%"

set grid
set key bottom right

files="exp--filesystem-limits--micro/*murphytest03*"
cmdline(s)="\"< ./process--wasted-space.sh ".s." ".files."\""
plotline(s)=cmdline(s)." using 1:2 with histeps title \"".s." chars per dir\""

plotstr= "" \
    .plotline(3).", \n" \
    .plotline(2).", \n" \
    .plotline(1).", \n" \
    .plotline(0)

plot @plotstr
