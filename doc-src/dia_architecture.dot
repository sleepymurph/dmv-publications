digraph {

    rankdir=LR

    define(RANGEHUNDRED, `eval($1+($2-$1)*$3/100)')
    define(DIVHUNDRED, `eval($1/100).eval($1%100)')

    define(REPO, `$1[label="$1\n$2% of data set", shape=rectange,
            height=DIVHUNDRED(RANGEHUNDRED(50,200,$2)),
            style=filled, fillcolor="0 0 .eval(100-20-$2/2)"]')

    REPO(repo0, 90)
    REPO(repo1, 40)
    REPO(repo2, 20)
    REPO(repo3, 30)
    REPO(repo4, 60)
    REPO(repo5, 10)

    repo1 -> repo0
    repo2 -> repo0
    repo3 -> repo1 -> repo3
    repo4 -> repo0 -> repo4
    repo5 -> repo4
    repo5 -> repo2
}
